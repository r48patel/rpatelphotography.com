<!DOCTYPE HTML>
<html>
	<% include ../partials/head.ejs %>
	<body>
		<% include ../partials/header.ejs %>

			<!-- Main -->
			<div id="main">
				<div class="inner">
					<header>
						<h1><%=title%></h1>
						<p><%=sub_title%></p>
					</header>
					<% if (main == true) {%>
						<section class="tiles">
						<% gallery_info.forEach(project => {%>
							<article class="style1">
														<span class="image">
															<img src=<%= project['thumb']%> alt="" />
														</span>
								<a href="gallery/<%= project['title']%>">
									<h2><%= project['title']%></h2>
									<div class="content">
										<p><%= project['sub_title']%></p>
									</div>
								</a>
							</article>
							<%})%>
						</section>
					<% } else { %>
					<section>
							<div class="box alt">
								<div class="row uniform">
									<div class="12u$"><span class="image fit"><img src="<%= gallery_info['thumb']%>" alt="" /></span></div>
									<% gallery_info['images'].forEach(image =>{%>
										<div class="6u"><span class="image fit"><img src="<%= image %>" alt="" /></span></div>
									<%})%>
								</div>
							</div>
						</section>
					<% } %>
				</div>
			</div>

			<!-- Footer -->
			<% include ../partials/footer.ejs %>
	</body>
</html>